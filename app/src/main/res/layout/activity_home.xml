<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/lg"/>
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'User Name'"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Details have been saved successfully."
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_chk_loan"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dip"
        android:layout_marginRight="35dp"
        android:background="@drawable/on_click_btn_change_color"
        android:padding="20dp"
        android:text="Check Loan Limit"
        android:textColor="@android:color/black"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dip"
        android:background="@drawable/on_click_btn_change_color"
        android:text="Proceed To Loan Application"
        android:textColor="@android:color/black"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textSize="20dp"
        android:padding="20dp"/>
    <Button
        android:id="@+id/btn_chk_loan_status"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dip"
        android:background="@drawable/on_click_btn_change_color"
        android:text="Check Loan status"
        android:textColor="@android:color/black"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textSize="20dp"
        android:padding="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
